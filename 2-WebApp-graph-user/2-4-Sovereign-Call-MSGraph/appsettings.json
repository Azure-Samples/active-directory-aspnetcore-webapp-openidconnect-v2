{
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "Enter_the_Directory_(Tenant)_Domain_Here",
    "TenantId": "[Enter 'common', or 'organizations' or Enter_the_Directory_(Tenant)_Id_Here",
    "ClientId": "Enter_the_Application_Id_Here",
    "CallbackPath": "/signin-oidc",
    "SignedOutCallbackPath": "/signout-callback-oidc",
    // To call an API
    "ClientSecret":  "Enter_the_Client_Secret_Value_Here"
  },
  "DownstreamApi": {
    /*
     'Scopes' contains space separated scopes of the Web API you want to call. This can be:
      - a scope for a V2 application (for instance api:00001111-aaaa-2222-bbbb-3333cccc4444/access_as_user)
      - a scope corresponding to a V1 application (for instance <App ID URI>/.default, where  <App ID URI> is the
        App ID URI of a legacy v1 Web application
      Applications are registered in the https:portal.azure.com portal.
    */
    "BaseUrl": "https://graph.microsoft.us/beta",
    "Scopes": "User.Read"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
