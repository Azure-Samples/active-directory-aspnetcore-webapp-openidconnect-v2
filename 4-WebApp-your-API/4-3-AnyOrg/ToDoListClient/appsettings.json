{
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "Enter_the_Directory_(Tenant)_Domain_Here",// such as contoso.onmicrosoft.com
    "TenantId": "common",
    "ClientId": "Enter_the_Application_Id_Here",
    "ClientSecret": "Enter_the_Client_Secret_Value_Here",
    "CallbackPath": "/signin-oidc",
    "SignedOutCallbackPath": "/signout-callback-oidc"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "TodoList": {
    /*
      TodoListScope is the scope of the Web API you want to call. This can be: "api://11112222-bbbb-3333-cccc-4444dddd5555/.default",
      - a scope for a V2 application (for instance api://00001111-aaaa-2222-bbbb-3333cccc4444/access_as_user)
      - a scope corresponding to a V1 application (for instance <GUID>/user_impersonation, where  <GUID> is the
        clientId of a V1 application, created in the https://portal.azure.com portal.
    */
    "TodoListServiceAppId": "Enter_the_API_Application_Id_Here",
    "TodoListServiceScope": "api://Enter_the_API_Application_Id_Here/.default",
    "TodoListBaseAddress": "https://localhost:44351/",
    "AdminConsentRedirectApi": "https://localhost:44351/api/Home"
  },
  "RedirectUri": "https://localhost:44321/",
  "AllowedHosts": "*"
}